<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/darkGrey"
    android:weightSum="1">

    <ProgressBar
        android:id="@+id/circularProgressBar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:indeterminate="false"
        android:progressDrawable="@drawable/circular_progress_bar"
        android:background="@drawable/circle_shape"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="100"
        android:progress="70"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity Level"
        android:textSize="20sp"
        android:textColor="@color/colorAccent"
        android:id="@+id/progressLabel"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="today"
        android:textSize="15sp"
        android:textColor="@color/colorAccent"
        android:id="@+id/progressToday"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp" />

    <ProgressBar
        android:id="@+id/horizontalProgressBar1"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:progressDrawable="@drawable/turquoise_progbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:maxHeight="10dip"
        android:minHeight="10dip"
        android:progress="50"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="320dp" />

    <ProgressBar
        android:id="@+id/horizontalProgressBar2"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:progressDrawable="@drawable/pink_progbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:maxHeight="10dip"
        android:minHeight="10dip"
        android:progress="75"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp" />

    <ProgressBar
        android:id="@+id/horizontalProgressBar3"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:progressDrawable="@drawable/orange_progbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:maxHeight="10dip"
        android:minHeight="10dip"
        android:progress="25"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="480dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Past week: "
        android:textSize="15sp"
        android:textColor="@color/colorAccent"
        android:id="@+id/progressPast1Week"
        android:layout_marginBottom="25dp"
        android:layout_alignBottom="@+id/horizontalProgressBar1"
        android:layout_alignStart="@+id/horizontalProgressBar1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Past month: "
        android:textSize="15sp"
        android:textColor="@color/colorAccent"
        android:id="@+id/progressPast1Month"
        android:layout_marginBottom="25dp"
        android:layout_alignBottom="@+id/horizontalProgressBar2"
        android:layout_alignStart="@+id/horizontalProgressBar2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Past 6 months: "
        android:textSize="15sp"
        android:textColor="@color/colorAccent"
        android:id="@+id/progressPast6Months"
        android:layout_alignBottom="@+id/horizontalProgressBar3"
        android:layout_alignStart="@+id/horizontalProgressBar3"
        android:layout_marginBottom="25dp" />

</RelativeLayout>